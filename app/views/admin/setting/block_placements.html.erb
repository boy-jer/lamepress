<% unless params[:setting].nil? %>
<% if @setting.errors.any? %>
  <h4 class="alert_warning"> Παρουσιαστηκαν τα εξείς λάθοι:
    <ul>
      <% @setting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </h4>
<% end %>
<% end %>
<%= form_for [:admin,Setting.new] do |f| %>
<div class="module_content">
  
  <%= field_set_tag nil, :style => "width:400px; float:left;margin-left:20px;margin-right: 2%;" do %>
    <%= f.label "Block Placement", {:style => "float:left;width:84%"} %>
    <%= f.text_field :meta_value, {:style => "width:365px;"} %>
    <%= f.hidden_field :meta_key, :value => "block_placement" %>
    <div class="submit_link">
      <%= f.submit "Create Block Placement" %>
    </div>
  <% end %>

  <div class="clear"></div>
</div>
<% end %>
<article class="module width_full">
    <header><h3 class="tabs_involved">Content Manager</h3>
    </header>

    <div class="tab_container">
      <div id="tab1" class="tab_content">
        <table class="tablesorter" cellspacing="0">
        <thead>
          <tr>
              <th>Block Placement</th>
              <th>Actions</th>
              <th></th>
          </tr>
        </thead>
        <tbody>
          <% @settings.each do |setting| %>
          <tr>
            <td><%= setting.meta_value %></td>
            <td><%= link_to image_tag("admin/icn_trash.png"), [:admin,setting], :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
          <% end %>
        </tbody>
        </table>

      </div><!-- end of #tab1 -->

    </div><!-- end of .tab_container -->

</article><!-- end of content manager article -->