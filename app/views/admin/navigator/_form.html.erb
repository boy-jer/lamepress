<% if @navigator.errors.any? %>
		<h4 class="alert_warning"> Παρουσιαστηκαν τα εξείς λάθοι:
			<ul>
      	<% @navigator.errors.full_messages.each do |msg| %>
      		<li><%= msg %></li>
      	<% end %>
    	</ul>
		</h4>
<% end %>

<%= form_for [:admin,@navigator] do |f| %>
<div class="module_content">
  <%= field_set_tag do %>
		<%= f.label :name %>
 		<%= f.text_field :name %>
 	<% end %>

 	<%= field_set_tag do %>
		<%= f.label :block_id %>
    <%= f.collection_select :block_id, Block.get_mode("navigator"), :id, :name, {:prompt => "Select a Block"} %>
 	<% end %>

 	<%= field_set_tag do %>
		<%= f.label :position %>
    <%= f.text_field :position %>
 	<% end %>

 	<%= field_set_tag do %>
 	  <%= f.label "Mode" %>
    <select id="navigator_navigatable_type" name="navigator[navigatable_type]">
  		<option value="Category">Category</option>
  	</select>
 	<% end %>

 	<%= field_set_tag do %>
		<%= f.label :navigatable_id %>
    <%= f.collection_select :navigatable_id, Category.all, :id, :name, {:prompt => "Select a Category"} %>
 	<% end %>


 <div class="clear"></div>
</div>
<footer>
	<div class="submit_link">
		<%= f.submit %>
	</div>
</footer>
<% end %>

