<% if @block.errors.any? %>
		<h4 class="alert_warning"> Παρουσιαστηκαν τα εξείς λάθοι:
			<ul>
      	<% @block.errors.full_messages.each do |msg| %>
      		<li><%= msg %></li>
      	<% end %>
    	</ul>
		</h4>
<% end %>

<%= form_for [:admin,@block] do |f| %>
<div class="module_content">
  <%= field_set_tag do %>
		<%= f.label :name %>
 		<%= f.text_field :name %>
 	<% end %>

  <%= field_set_tag nil, :style => "width:48%; float:left;margin-left:0%;margin-right: 2%;" do %>
		<%= f.label :placement %>
 		<%= f.select :placement, @block_placements, {:style => "width:84%;"} %>
 	<% end %>

  <%= field_set_tag nil, :style => "width:49%; float:left;margin-left:0%;margin-right: 0%;" do %>
		<%= f.label :mode %>
 		<%= f.text_field :mode, {:style => "width:84%;"} %>
 	<% end %>

 	<%= (f.hidden_field :position, :value => 0) unless @act=="update" %>

 <div class="clear"></div>
</div>
<footer>
	<div class="submit_link">
		<%= f.submit %>
	</div>
</footer>
<% end %>

