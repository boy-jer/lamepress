<% if @issue.errors.any? %>
		<h4 class="alert_warning"> Παρουσιαστηκαν τα εξείς λάθοι:
			<ul>
      	<% @issue.errors.full_messages.each do |msg| %>
      		<li><%= msg %></li>
      	<% end %>
    	</ul>
		</h4>
<% end %>

<%= form_for @issue, :url => { :action => @act, :id => @issue.id  }, :html => { :multipart => true } do |f| %>
<div class="module_content">
  <%= field_set_tag nil, :style => "width:48%; float:left;margin-right:3%" do %>
		<%= f.label :number %>
 		<%= f.text_field :number, :style => "width:92%;" %>
 	<% end %>

 	<%= field_set_tag nil, :style => "width:48%; float:left;" do %>
		<%= f.label :date %>
 		<%= f.text_field :date,:style => "width:92%;" %>
 	<% end %>

 	<%= field_set_tag nil, :style => "width:48%; float:left;margin-right:3%" do %>
    <%= f.label :cover %>
    <%= f.file_field :cover %>
 	<% end %>

 	<%= field_set_tag nil, :style => "width:48%; float:left;" do %>
    <%= f.label :pdf %>
    <%= f.file_field :pdf %>
 	<% end %>

 <div class="clear"></div>
</div>
<footer>
	<div class="submit_link">
	  <% if (@issue.published==true || @issue.published.nil? ) %>
		  <%= select :issue, :published, "<option  value=\"1\" selected=\"selected\">Published</option><option value=\"0\">Hidden</option>"%>
		<% else %>
		  <%= select :issue, :published, "<option  value=\"1\">Published</option><option value=\"0\" selected=\"selected\">Hidden</option>"%>
		<% end %>
		<%= f.submit %>
	</div>
</footer>
<% end %>

