<% if @category.errors.any? %>
		<h4 class="alert_warning"> Παρουσιαστηκαν τα εξείς λάθοι:
			<ul>
      	<% @category.errors.full_messages.each do |msg| %>
      		<li><%= msg %></li>
      	<% end %>
    	</ul>
		</h4>
<% end %>

<%= form_for @category, :url => { :action => @act, :id => @category.id  } do |f| %>
<div class="module_content">
  <%= field_set_tag do %>
		<%= f.label :name %>
 		<%= f.text_field :name %>
 	<% end %>


 <div class="clear"></div>
</div>
<footer>
	<div class="submit_link">
    <% if (@category.issued==true || @category.issued.nil? ) %>
		  <%= select :category, :issued, "<option  value=\"1\" selected=\"selected\">Issued</option><option value=\"0\">Non Issued</option>"%>
		<% else %>
		  <%= select :category, :issued, "<option  value=\"1\">Issued</option><option value=\"0\" selected=\"selected\">Non Issued</option>"%>
		<% end %>
		<%= f.submit %>
	</div>
</footer>
<% end %>

