<% if @user.errors.any? %>
		<h4 class="alert_warning"> Παρουσιαστηκαν τα εξείς λάθοι:
			<ul>
      	<% @user.errors.full_messages.each do |msg| %>
      		<li><%= msg %></li>
      	<% end %>
    	</ul>
		</h4>
<% end %>

<%= form_for @user, :url => { :action => @act, :id => @user.id  } do |f| %>
<div class="module_content">
  <%= field_set_tag do %>
		<%= f.label :email %>
 		<%= f.text_field :email %>
 	<% end %>
 	
 	<%= field_set_tag do %>
		<%= f.label :password %>
 		<%= f.text_field :password %>
 	<% end %>
 	
 	<%= field_set_tag do %>
		<%= f.label :password_confirmation %>
 		<%= f.text_field :password_confirmation %>
 	<% end %>

 <div class="clear"></div>
</div>
<footer>
	<div class="submit_link">
		<%= f.submit %>	
	</div>
</footer>
<% end %>
