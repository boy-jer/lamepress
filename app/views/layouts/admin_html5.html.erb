<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8"/>
	<title>Dashboard I Admin Panel</title>

	<%= stylesheet_link_tag 'admin_html5/layout', :media => 'all' %>
	<!--[if lt IE 9]>
	<link rel="stylesheet" href="css/ie.css" type="text/css" media="screen" />
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
	<%= javascript_include_tag "admin_html5/hideshow", "admin_html5/jquery.equalHeight", "admin_html5/jquery.tablesorter.min", "admin_html5/jquery-ui-1.8.16.custom.min"%>
  <%= csrf_meta_tag %>
	<%= yield(:head) %>
	<script type="text/javascript">
	$(document).ready(function()
    	{
      	  $(".tablesorter").tablesorter();
   	 }
	);
	$(document).ready(function() {

	//When page loads...
	$(".tab_content").hide(); //Hide all content
	$("ul.tabs li:first").addClass("active").show(); //Activate first tab
	$(".tab_content:first").show(); //Show first tab content

	//On Click Event
	$("ul.tabs li").click(function() {

		$("ul.tabs li").removeClass("active"); //Remove any "active" class
		$(this).addClass("active"); //Add "active" class to selected tab
		$(".tab_content").hide(); //Hide all tab content

		var activeTab = $(this).find("a").attr("href"); //Find the href attribute value to identify the active tab + content
		$(activeTab).fadeIn(); //Fade in the active ID content
		return false;
	});

});
    </script>
    <script type="text/javascript">
    $(function(){
        $('.column').equalHeight();
    });
    </script>

</head>


<body>
	<header id="header">
		<hgroup>
			<h1 class="site_title"><%= link_to "Admin panel", admin_path %></h1>
			<h2 class="section_title"><%= controller.controller_name %></h2><div class="btn_view_site"><%= link_to "View Site", root_path %></div>
		</hgroup>
	</header> <!-- end of header bar -->

	<section id="secondary_bar">
		<div class="user">
			<p><%= current_user.email+" " %><%= link_to "3 Messages", admin_path  %></p>
			<%= link_to "logout", destroy_user_session_path, :class => "logout_user" %>
		</div>
		<div class="breadcrumbs_container">
			<article class="breadcrumbs"><%= link_to "Admin panel", admin_path  %><div class="breadcrumb_divider"></div><%= link_to controller.controller_name, "/"+controller.controller_path  %><div class="breadcrumb_divider"></div><a class="current"><%= controller.action_name%></a></article>
		</div>
	</section><!-- end of secondary bar -->

	<aside id="sidebar" class="column">
		<form class="quick_search">
			<input type="text" value="Quick Search" onfocus="if(!this._haschanged){this.value=''};this._haschanged=true;">
		</form>
		<hr/>
		<% if can? :manage, Article %>
		<h3>Αρθρα</h3>
		<ul class="toggle">
			<li class="icn_new_article"><%= link_to "Προσθήκη άρθρου", new_article_path %></li>
			<li class="icn_edit_article"><%= link_to "Διαχείριση άρθρων", articles_path %></li>
		</ul>
		<% end %>
		<% if can? :manage, Issue %>
		<h3>Φυλλα</h3>
		<ul class="toggle">
			<li class="icn_new_article"><%= link_to "Προσθήκη φύλλου", new_issue_path %></li>
			<li class="icn_categories"><%= link_to "Διαχείριση Φύλλων", issues_path %></li>
		</ul>
		<% end %>
		<% if can? :manage, Category %>
		<h3>Κατηγοριες</h3>
		<ul class="toggle">
			<li class="icn_new_article"><%= link_to "Προσθήκη κατηγορίας", new_category_path %></li>
			<li class="icn_categories"><%= link_to "Διαχείριση κατηγοριών", categories_path %></li>
		</ul>
		<% end %>
		<% if can? :manage, Block %>
		<h3>Blocks</h3>
		<ul class="toggle">
			<li class="icn_new_article"><%= link_to "Προσθήκη block", new_block_path %></li>
			<li class="icn_categories"><%= link_to "Διαχείριση block", blocks_path %></li>
		</ul>
		<% end %>
		<% if can? :manage, Navigator %>
		<h3>Navigator</h3>
		<ul class="toggle">
			<li class="icn_new_article"><%= link_to "Προσθήκη navigator", new_navigator_path %></li>
			<li class="icn_categories"><%= link_to "Διαχείριση navigator", navigators_path %></li>
		</ul>
		<% end %>
		<% if can? :manage, Banner %>
		<h3>Banner</h3>
		<ul class="toggle">
			<li class="icn_new_article"><%= link_to "Προσθήκη banner", new_banner_path %></li>
			<li class="icn_categories"><%= link_to "Διαχείριση banner", banners_path %></li>
		</ul>
		<% end %>
		<% if can? :manage, User %>
		<h3>Xρηστες</h3>
		<ul class="toggle">
			<li class="icn_add_user"><%= link_to "Προσθήκη χρήστη", new_user_path %></li>
			<li class="icn_view_users"><%= link_to "Διαχείριση χρηστών", users_path %></li>
		</ul>
		<% end %>

		<footer>
			<hr />
			<p><strong>Copyright &copy; 2011 Website Admin</strong></p>
			<p>Theme by <a href="http://www.medialoot.com">MediaLoot</a></p>
		</footer>
	</aside><!-- end of sidebar -->

	<section id="main" class="column">
		<%= (raw "<h4 class=\"alert_info\">"+notice+"</h4>") unless notice.nil? %>
		<%= (raw "<h4 class=\"alert_error\">"+alert+"</h4>") unless alert.nil? %>
		<%= yield %>
	<div class="spacer"></div>
	</section>


</body>

</html>

