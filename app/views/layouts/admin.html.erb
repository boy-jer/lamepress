<%= javascript_include_tag :ckeditor %>
<%= csrf_meta_tag %>
</head>

<body>﻿
<div class = "site-wrapper">
 
<!--###########-----header-----###########-->
	<div class = "header-wrapper">
		<div class = "header_image">
			 <%= image_tag("admin/cccp.gif") %>
